<p id="notice"><%= notice %></p>

<div class = "content_area">
<h1>投稿一覧</h1>
  <ul>
    <% @feeds.each do |feed| %>
      
        <li class = content>
        <p><%= feed.content %></p>
        <p><%= feed.image %></p>
        <p><%= feed.user.name %></p>
        <p><%= link_to 'Show', feed %></p>
        <p><%= link_to 'Edit', edit_feed_path(feed) %></p>
        <p><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </li>      
    <% end %>
    </ul>
</div>
